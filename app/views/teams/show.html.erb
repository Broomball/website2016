<!-- This view is used to display a single team-->

<%provide(:title, @team.name)%>

<div class="container-fluid table-responsive">
	<div class = "row">
		<div class="jumbotron">
			<div class="row">
                <div class="col-lg-9 col-md-8 col-sm-6">
                	<h1 id="team"><u><%=truncate(@team.name, :length => 30) %></u></h1>
                </div>
                <div class="col-lg-3 col-md-4 col-sm-6">
                   <img src="/assets/carousel2.jpg" class="img-responsive"/>
                </div>
			</div>
		</div>

		<table class="table table-hover active">
			<thead>
	    		<tr>
			      <th>Player Name</th>
			      <th>Nick Name</th>
			      <th>Position</th>
			      <th>Goals</th>
			      <th>Assists</th>
			      <th>Points</th>
			      <th>Penalty Minutes</th>
			      <th></th>
	    		</tr>
	  		</thead>
	  		<tbody>


					<% playerteam=PlayerTeam.joins(:player).select("player_teams.id, player_id, first_name, last_name, nickname, position, goals, assists").where(team_id: @team.id) %>

					<% playerteam.each do |pt| %>
					<tr>

						<td><%= link_to pt.first_name + " " + pt.last_name, player_path(pt.player_id) %></td>
						<td><%= pt.nickname %></td>
						<td><%= pt.position %></td>
						<td><%= pt.goals || 0 %></td>
						<td><%= pt.assists || 0 %></td>
						<td>TODO</td>
						<td>16:00 TODO</td>
						<td><%= link_to 'Remove', player_team_path(pt.id),  method: :delete, data: { confirm: 'Are you sure?' } %></td>
					</tr>
					<% end %>



			</tbody>
		</table>
	</div>
	<div class = "row">

		<%= link_to new_player_team_path(:team => @team.id), class:"btn btn-xs edit-btn" do %>Add Player<span class="glyphicon glyphicon-plus"></span> <%end%>

	</div>
	<div class = "row">
		<h2 class="table-title"><span>2016 Team Schedule</span></h2>

		<table class="table table-hover active">
			<thead>
	    		<tr>
			      <th>Day</th>
			      <th>Time</th>
			      <th>Rink</th>
			      <th>Home</th>
			      <th>Score</th>
			      <th>Away</th>
			      <th></th>
	    		</tr>
	  		</thead>
	  		<tbody>
	  			<%@games.each do |g|%>
				<tr>
					<td><%= g.start_time.to_date %></td>
					<td><%= g.start_time.strftime("%I:%M%p") %></td>
					<td>Rink</td>
					<td><%= link_to g.home_team_name, team_path(g.home_team_id) %></td>
					<td><%= p (g.home_goals + " - " + g.away_goals) unless g.home_goals.nil? or g.away_goals.nil? %></td>
					<td><%= link_to g.away_team_name, team_path(g.away_team_id) %></td>
					<!--TODO: Remove column if not captain-->
					<td><%= link_to 'Enter Stats', game_path(g.id) %></td>
				</tr>
				<%end%>
			</tbody>
		</table>
	</div>
</div>
